<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
        xmlns:vm="using:avalonia_demo8.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="avalonia_demo8.Views.Task4PageView">
    <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Завдання 4: Трикутник у колі" FontWeight="Bold"/>
        <TextBlock Text="Визначити, чи поміститься правильний трикутник зі стороною a в колі радіуса R" TextWrapping="Wrap"/>
        
        <TextBox x:Name="InputR" Watermark="Введіть радіус кола R"/>
        <TextBox x:Name="InputA" Watermark="Введіть сторону трикутника a"/>
        
        <Button Content="Перевірити" Click="OnCheck"/>
        <TextBlock x:Name="ResultText" FontWeight="Bold"/>
    </StackPanel>
</UserControl>