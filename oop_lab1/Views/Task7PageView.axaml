<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
        xmlns:vm="using:avalonia_demo8.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="avalonia_demo8.Views.Task7PageView">
    <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Завдання 7: Слова на букву 'a'" FontWeight="Bold"/>
        <TextBlock Text="Підрахувати кількість слів, що закінчуються на букву 'a'" TextWrapping="Wrap"/>
        
        <TextBox x:Name="InputText" Watermark="Введіть слова через ;" AcceptsReturn="True" Height="100"/>
        
        <Button Content="Підрахувати" Click="OnCheck"/>
        <TextBlock x:Name="ResultText" FontWeight="Bold"/>
    </StackPanel>
</UserControl>